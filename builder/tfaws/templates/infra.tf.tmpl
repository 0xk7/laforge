            agent       = "false"
            host        = "${google_compute_address.{{ $resource_name }}.address}"
            type        = "ssh"
            user        = "root"
            timeout     = "60m"
            private_key = "${file("{{ index $.Build.Config "rel_ssh_private_key_file" }}")}"
