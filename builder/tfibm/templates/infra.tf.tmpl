        depends_on = [
          "ibm_compute_vm_instance.{{ $resource_name }}",
          "null_resource.provision_{{ $resource_name }}_step{{ $last_step_num }}",
        ]
      }

      resource "null_resource" "dns_provisioned" {
        triggers {
          instance_id = "${ibm_compute_vm_instance.{{ $resource_name }}.id},${google_storage_bucket_object.{{ $resource_name }}-root-dns.md5hash}"
        }

        depends_on = [
          "ibm_compute_vm_instance.{{ $resource_name }}",
          "google_storage_bucket_object.{{ $resource_name }}-root-dns",
          "null_resource.provision_{{ $resource_name }}_step{{ $last_step_num }}",
        ]
      }
    {{ end }}

    {{ if eq (index $host.Tags "domain-controller") "true" }}
      {{ $last_step_num := Decr (len $host.Provisioners) }}
      resource "null_resource" "ad_provisioned" {
        depends_on = [
          "null_resource.provision_{{ $resource_name }}_step{{ $last_step_num }}",
        ]
      }
    {{ end }}

    resource "dns_a_record_set" "{{ $resource_name }}_a_record" {
      zone = "{{ $.Competition.DNS.RootDomain }}."
      name = "{{ $host.Hostname }}.{{ $net }}"
      addresses = [
        "${ibm_compute_vm_instance.{{ $resource_name }}.ipv4_address_private}",
      ]
      ttl = 300
    }

  {{ end }}
